generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"      // change later if you want
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  role         Role     @default(USER)
  tickets      Ticket[]
  createdAt    DateTime @default(now())
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      TicketStatus @default(AVOIN)
  priority    Priority     @default(KESKITASO)
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum TicketStatus {
  AVOIN
  KASITTELYSSA
  RATKAISTU
}

enum Priority {
  MATALA
  KESKITASO
  KORKEA
}
